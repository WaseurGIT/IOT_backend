#!/usr/bin/env node

/**
 * Module dependencies.
 */

require('dotenv').config();
var app = require('../app');
var debug = require('debug')('iot-backend:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Setup WebSocket Server (plain WebSocket, not Socket.IO)
 */

var WebSocket = require('ws');
var wss = new WebSocket.Server({ 
  server: server,
  path: '/ws',
  perMessageDeflate: false // Disable compression for binary frames
});

// Make wss accessible to our router
app.set('wss', wss);

// WebSocket connection handling
var connectedClients = 0;
var esp32CameraClient = null; // Store ESP32 Camera connection
var esp32CarClient = null; // Store ESP32 Car connection
var webClients = new Set(); // Store web client connections

wss.on('connection', function(ws, req) {
  connectedClients++;
  var isESP32 = false;
  var clientIP = req.socket.remoteAddress;
  console.log('ðŸ“± WebSocket client connected (' + connectedClients + ' total)');
  console.log('   Remote address: ' + clientIP);

  // Helper function to process frame data
  function processFrame(frameData) {
    if (!Buffer.isBuffer(frameData)) {
      return;
    }

    // This is a frame from ESP32
    if (frameData.length > 0) {
      // Log only occasionally to avoid spam
      if (Math.random() < 0.01) {
        console.log('ðŸ“¸ Frame received from ESP32 via WebSocket:', frameData.length, 'bytes');
      }
      
      // Save as latest frame
      app.set('latestFrame', frameData);
      
      // Update frame count
      var frameCount = (app.get('frameCount') || 0) + 1;
      app.set('frameCount', frameCount);
      
      // Increment FPS counter
      var incrementFrameCount = app.get('incrementFrameCount');
      if (incrementFrameCount) {
        incrementFrameCount();
      }
      
      // Update ESP32 status
      var esp32Status = app.get('esp32Status') || { connected: false };
      esp32Status.connected = true;
      esp32Status.lastUpdate = new Date();
      esp32Status.frameCount = frameCount;
      app.set('esp32Status', esp32Status);
      
      // Broadcast to all web clients (not ESP32)
      var frameMessage = JSON.stringify({
        type: 'frame',
        image: frameData.toString('base64'),
        timestamp: Date.now(),
      });
      
      webClients.forEach(function(client) {
        if (client.readyState === 1) { // WebSocket.OPEN = 1
          client.send(frameMessage);
        }
      });
    }
  }

  // Handle incoming messages
  ws.on('message', function(data) {
    var messageText = null;
    var parsed = null;
    
    // Convert buffer to string if needed
    if (Buffer.isBuffer(data)) {
      try {
        messageText = data.toString('utf8');
        parsed = JSON.parse(messageText);
      } catch (e) {
        // Not JSON, treat as binary frame data (for camera)
        if (isESP32 && esp32CameraClient === ws) {
          processFrame(data);
        }
        return;
      }
    } else if (typeof data === 'string') {
      messageText = data;
      try {
        parsed = JSON.parse(messageText);
      } catch (e) {
        // Not JSON, ignore
        return;
      }
    }
    
    // Handle device identification
    if (parsed && parsed.type) {
      if (parsed.type === 'esp32_camera') {
        isESP32 = true;
        esp32CameraClient = ws;
        console.log('ðŸ“· ESP32 Camera connected!', parsed.device);
        app.set('esp32CameraClient', ws);
        return;
      } else if (parsed.type === 'esp32_car') {
        isESP32 = true;
        esp32CarClient = ws;
        console.log('ðŸš— ESP32 Car connected!', parsed.device);
        app.set('esp32CarClient', ws);
        app.set('carStatus', {
          connected: true,
          lastUpdate: new Date(),
          status: parsed.status || 'ready'
        });
        return;
      } else if (parsed.type === 'ack') {
        // Acknowledgment from ESP32 car
        console.log('âœ… Car command acknowledged:', parsed.command);
        // Broadcast acknowledgment to web clients
        webClients.forEach(function(client) {
          if (client.readyState === 1) {
            client.send(JSON.stringify({
              type: 'car_ack',
              command: parsed.command,
              status: parsed.status
            }));
          }
        });
        return;
      }
    }
    
    // Handle car control commands from web clients
    if (parsed && parsed.command && !isESP32) {
      handleCarCommand(parsed);
      return;
    }
    
    // If it's binary and ESP32 camera is identified, process as frame
    if (Buffer.isBuffer(data) && isESP32 && esp32CameraClient === ws) {
      processFrame(data);
    }
  });
  
  // Helper function to handle car control commands
  function handleCarCommand(commandData) {
    var command = commandData.command;
    var speed = commandData.speed || 200;
    
    // Validate command
    var validCommands = ['forward', 'backward', 'left', 'right', 'stop'];
    if (validCommands.indexOf(command) === -1) {
      console.log('âš ï¸  Invalid car command:', command);
      return;
    }
    
    // Send command to ESP32 car
    if (esp32CarClient && esp32CarClient.readyState === 1) {
      var carCommand = JSON.stringify({
        command: command,
        speed: speed
      });
      esp32CarClient.send(carCommand);
      console.log('ðŸ“¤ Car command sent:', command, 'speed:', speed);
      
      // Update car status
      var carStatus = app.get('carStatus') || {};
      carStatus.lastCommand = command;
      carStatus.lastCommandTime = new Date();
      app.set('carStatus', carStatus);
    } else {
      console.log('âš ï¸  Car not connected. Command ignored:', command);
      // Notify web client that car is not connected
      ws.send(JSON.stringify({
        type: 'error',
        message: 'Car not connected',
        command: command
      }));
    }
  }

  // Handle client type (ESP32 or web client)
  if (!isESP32) {
    // This is a web client
    webClients.add(ws);
    
    // Send latest frame immediately if available
    var latestFrame = app.get('latestFrame');
    if (latestFrame) {
      var frameMessage = JSON.stringify({
        type: 'frame',
        image: latestFrame.toString('base64'),
        timestamp: Date.now(),
      });
      ws.send(frameMessage);
    }

    // Send camera status
    var esp32Status = app.get('esp32Status') || {
      connected: false,
      lastUpdate: null,
      frameCount: 0,
      fps: 0,
    };
    ws.send(JSON.stringify({
      type: 'status',
      data: esp32Status,
    }));
    
    // Send car status
    var carStatus = app.get('carStatus') || {
      connected: false,
      lastUpdate: null,
      status: 'disconnected'
    };
    ws.send(JSON.stringify({
      type: 'car_status',
      data: carStatus,
    }));
  }

  // Handle disconnection
  ws.on('close', function() {
    connectedClients--;
    if (isESP32) {
      if (esp32CameraClient === ws) {
        console.log('ðŸ“· ESP32 Camera disconnected');
        esp32CameraClient = null;
        app.set('esp32CameraClient', null);
        var esp32Status = app.get('esp32Status') || {};
        esp32Status.connected = false;
        app.set('esp32Status', esp32Status);
      } else if (esp32CarClient === ws) {
        console.log('ðŸš— ESP32 Car disconnected');
        esp32CarClient = null;
        app.set('esp32CarClient', null);
        var carStatus = app.get('carStatus') || {};
        carStatus.connected = false;
        app.set('carStatus', carStatus);
      }
    } else {
      webClients.delete(ws);
      console.log('ðŸ“± Web client disconnected (' + connectedClients + ' remaining)');
    }
  });

  // Handle errors
  ws.on('error', function(error) {
    console.error('âš ï¸  WebSocket error:', error);
  });
});

/**
 * Listen on provided port, on all network interfaces.
 * Explicitly bind to 0.0.0.0 to accept connections from ESP32 and other devices
 */

server.listen(port, '0.0.0.0');
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
