#!/usr/bin/env node

/**
 * Module dependencies.
 */

require("dotenv").config();
var app = require("../app");
var debug = require("debug")("iot-backend:server");
var http = require("http");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Setup WebSocket Servers (plain WebSocket, not Socket.IO)
 * Separate endpoints for camera and car for cleaner separation
 */

var WebSocket = require("ws");

// Camera WebSocket Server
var wssCam = new WebSocket.Server({
  noServer: true,
  perMessageDeflate: false,
});

// Car WebSocket Server
var wssCar = new WebSocket.Server({
  noServer: true,
  perMessageDeflate: false,
});

// General WebSocket Server (for web clients)
var wss = new WebSocket.Server({
  noServer: true,
  perMessageDeflate: false,
});

// Handle HTTP upgrade for different paths
server.on("upgrade", function (request, socket, head) {
  var pathname = require("url").parse(request.url).pathname;
  
  console.log("ğŸ”Œ WebSocket upgrade request for:", pathname);
  
  if (pathname === "/ws/camera") {
    wssCam.handleUpgrade(request, socket, head, function (ws) {
      wssCam.emit("connection", ws, request);
    });
  } else if (pathname === "/ws/car") {
    wssCar.handleUpgrade(request, socket, head, function (ws) {
      wssCar.emit("connection", ws, request);
    });
  } else if (pathname === "/ws") {
    wss.handleUpgrade(request, socket, head, function (ws) {
      wss.emit("connection", ws, request);
    });
  } else {
    socket.destroy();
  }
});

// Make wss accessible to our router
app.set("wss", wss);

// WebSocket connection handling
var connectedClients = 0;
var esp32CameraClient = null; // Store ESP32 Camera connection
var esp32CarClient = null; // Store ESP32 Car connection
var webClients = new Set(); // Store web client connections

// Store car status in app
app.set("carStatus", {
  connected: false,
  lastUpdate: null,
  status: "disconnected",
  lastCommand: null,
  lastCommandTime: null,
  deviceInfo: null,
});

// Store ESP32 camera status
app.set("esp32Status", {
  connected: false,
  lastUpdate: null,
  frameCount: 0,
  fps: 0,
});

wss.on("connection", function (ws, req) {
  connectedClients++;
  var isESP32 = false;
  var clientType = "unknown";
  var clientIP = req.socket.remoteAddress;

  console.log("\n=== NEW WEBSOCKET CONNECTION ===");
  console.log("ğŸ“± Client connected (" + connectedClients + " total)");
  console.log("   Remote address: " + clientIP);
  console.log("   User-Agent:", req.headers["user-agent"] || "Unknown");

  // Helper function to process frame data
  function processFrame(frameData) {
    if (!Buffer.isBuffer(frameData)) {
      return;
    }

    // This is a frame from ESP32
    if (frameData.length > 0) {
      // Log only occasionally to avoid spam
      if (Math.random() < 0.01) {
        console.log(
          "ğŸ“¸ Frame received from ESP32 Camera:",
          frameData.length,
          "bytes"
        );
      }

      // Save as latest frame
      app.set("latestFrame", frameData);

      // Update frame count
      var frameCount = (app.get("frameCount") || 0) + 1;
      app.set("frameCount", frameCount);

      // Increment FPS counter
      var incrementFrameCount = app.get("incrementFrameCount");
      if (incrementFrameCount) {
        incrementFrameCount();
      }

      // Update ESP32 status
      var esp32Status = app.get("esp32Status") || { connected: false };
      esp32Status.connected = true;
      esp32Status.lastUpdate = new Date();
      esp32Status.frameCount = frameCount;
      app.set("esp32Status", esp32Status);

      // Broadcast to all web clients (not ESP32)
      var frameMessage = JSON.stringify({
        type: "frame",
        image: frameData.toString("base64"),
        timestamp: Date.now(),
      });

      webClients.forEach(function (client) {
        if (client.readyState === 1) {
          // WebSocket.OPEN = 1
          client.send(frameMessage);
        }
      });
    }
  }

  // Handle incoming messages
  ws.on("message", function (data) {
    var messageText = null;
    var parsed = null;

    // Only log non-frame messages (reduces spam from 10 FPS camera stream)
    var shouldLog = true;
    if (clientType === "esp32_camera" && Buffer.isBuffer(data) && data.length > 1000) {
      shouldLog = false; // Skip logging binary camera frames
    }
    
    if (shouldLog) {
      console.log(
        "ğŸ“¨ Message received from",
        clientType,
        ":",
        data.length,
        "bytes"
      );
    }

    // Convert buffer to string if needed
    if (Buffer.isBuffer(data)) {
      try {
        messageText = data.toString("utf8");
        parsed = JSON.parse(messageText);
        if (shouldLog) {
          console.log("   Parsed JSON:", parsed);
        }
      } catch (e) {
        // Not JSON, treat as binary frame data (for camera)
        // Don't log - already handled by processFrame
        if (isESP32 && esp32CameraClient === ws) {
          processFrame(data);
        } else if (!isESP32) {
          console.log("   âŒ Binary data from non-ESP32 client, ignoring");
        }
        return;
      }
    } else if (typeof data === "string") {
      messageText = data;
      try {
        parsed = JSON.parse(messageText);
        if (shouldLog) {
          console.log("   Parsed JSON:", parsed);
        }
      } catch (e) {
        console.log("   âŒ Invalid JSON:", messageText);
        // Not JSON, ignore
        return;
      }
    }

    // Handle device identification
    if (parsed && parsed.type) {
      if (parsed.type === "esp32_camera") {
        isESP32 = true;
        clientType = "esp32_camera";
        esp32CameraClient = ws;
        console.log(
          "ğŸ“· ESP32 Camera identified! Device:",
          parsed.device || "Unknown"
        );
        app.set("esp32CameraClient", ws);

        // Update status
        var esp32Status = app.get("esp32Status");
        esp32Status.connected = true;
        esp32Status.lastUpdate = new Date();
        esp32Status.deviceInfo = parsed.device;
        app.set("esp32Status", esp32Status);

        // Notify web clients
        broadcastToWebClients({
          type: "camera_connected",
          device: parsed.device,
        });
        return;
      } else if (parsed.type === "esp32_car") {
        isESP32 = true;
        clientType = "esp32_car";
        esp32CarClient = ws;
        console.log(
          "ğŸš— ESP32 Car identified! Device:",
          parsed.device || "Unknown",
          "Status:",
          parsed.status || "Unknown"
        );
        app.set("esp32CarClient", ws);

        // Update car status
        var carStatus = app.get("carStatus");
        carStatus.connected = true;
        carStatus.lastUpdate = new Date();
        carStatus.status = parsed.status || "ready";
        carStatus.deviceInfo = parsed.device;
        app.set("carStatus", carStatus);

        // Notify web clients
        broadcastToWebClients({
          type: "car_connected",
          device: parsed.device,
          status: parsed.status,
        });
        return;
      } else if (parsed.type === "ack") {
        // Acknowledgment from ESP32 car
        console.log(
          "âœ… Car command acknowledged:",
          parsed.command,
          "Status:",
          parsed.status
        );
        // Broadcast acknowledgment to web clients
        broadcastToWebClients({
          type: "car_ack",
          command: parsed.command,
          status: parsed.status,
        });
        return;
      } else if (parsed.type === "ping" || parsed.type === "heartbeat") {
        console.log("ğŸ’“ Heartbeat from", clientType);
        // Update last update time
        if (clientType === "esp32_car") {
          var carStatus = app.get("carStatus");
          carStatus.lastUpdate = new Date();
          app.set("carStatus", carStatus);
        } else if (clientType === "esp32_camera") {
          var esp32Status = app.get("esp32Status");
          esp32Status.lastUpdate = new Date();
          app.set("esp32Status", esp32Status);
        }
        return;
      }
    }

  // Handle car control commands from web clients
  if (parsed && parsed.command) {
    handleCarCommand(parsed);
    return;
  }

    // If it's binary and ESP32 camera is identified, process as frame
    if (Buffer.isBuffer(data) && isESP32 && esp32CameraClient === ws) {
      processFrame(data);
    }
  });

  // Helper function to broadcast to all web clients
  function broadcastToWebClients(message) {
    var messageStr = JSON.stringify(message);
    webClients.forEach(function (client) {
      if (client.readyState === 1) {
        client.send(messageStr);
      }
    });
  }

  // Helper function to handle car control commands
  function handleCarCommand(commandData) {
    var command = commandData.command;
    var speed = commandData.speed || 200;

    // Validate command
    var validCommands = ["forward", "backward", "left", "right", "stop"];
    if (validCommands.indexOf(command) === -1) {
      console.log("âš ï¸  Invalid car command:", command);
      return;
    }

    // Send command to ESP32 car
    if (esp32CarClient && esp32CarClient.readyState === 1) {
      var carCommand = JSON.stringify({
        command: command,
        speed: speed,
        timestamp: Date.now(),
      });
      esp32CarClient.send(carCommand);
      console.log("ğŸ“¤ Car command sent:", command, "speed:", speed);

      // Update car status
      var carStatus = app.get("carStatus") || {};
      carStatus.lastCommand = command;
      carStatus.lastCommandTime = new Date();
      app.set("carStatus", carStatus);
    } else {
      console.log("âš ï¸  Car not connected. Command ignored:", command);
      // Notify web client that car is not connected
      ws.send(
        JSON.stringify({
          type: "error",
          message: "Car not connected",
          command: command,
        })
      );
    }
  }

  // Handle client type (ESP32 or web client)
  if (!isESP32) {
    // This is a web client
    clientType = "web_client";
    webClients.add(ws);
    console.log("ğŸŒ Web client registered");

    // Send latest frame immediately if available
    var latestFrame = app.get("latestFrame");
    if (latestFrame) {
      var frameMessage = JSON.stringify({
        type: "frame",
        image: latestFrame.toString("base64"),
        timestamp: Date.now(),
      });
      ws.send(frameMessage);
    }

    // Send camera status
    var esp32Status = app.get("esp32Status") || {
      connected: false,
      lastUpdate: null,
      frameCount: 0,
      fps: 0,
    };
    ws.send(
      JSON.stringify({
        type: "camera_status",
        data: esp32Status,
      })
    );

    // Send car status
    var carStatus = app.get("carStatus") || {
      connected: false,
      lastUpdate: null,
      status: "disconnected",
    };
    ws.send(
      JSON.stringify({
        type: "car_status",
        data: carStatus,
      })
    );
  }

  // Handle disconnection
  ws.on("close", function (code, reason) {
    connectedClients--;
    console.log("\n=== WEBSOCKET DISCONNECTION ===");
    console.log("ğŸ”Œ Client disconnected (" + connectedClients + " remaining)");
    console.log("   Type:", clientType);
    console.log("   Code:", code, "Reason:", reason || "No reason");

    if (isESP32) {
      if (esp32CameraClient === ws) {
        console.log("ğŸ“· ESP32 Camera disconnected");
        esp32CameraClient = null;
        app.set("esp32CameraClient", null);
        var esp32Status = app.get("esp32Status") || {};
        esp32Status.connected = false;
        app.set("esp32Status", esp32Status);

        // Notify web clients
        broadcastToWebClients({
          type: "camera_disconnected",
        });
      } else if (esp32CarClient === ws) {
        console.log("ğŸš— ESP32 Car disconnected");
        esp32CarClient = null;
        app.set("esp32CarClient", null);
        var carStatus = app.get("carStatus") || {};
        carStatus.connected = false;
        carStatus.status = "disconnected";
        app.set("carStatus", carStatus);

        // Notify web clients
        broadcastToWebClients({
          type: "car_disconnected",
        });
      }
    } else {
      webClients.delete(ws);
      console.log("ğŸ“± Web client removed");
    }
  });

  // Handle errors
  ws.on("error", function (error) {
    console.error("âš ï¸  WebSocket error for", clientType, ":", error);
  });
});

// ===== CAMERA WEBSOCKET HANDLER (/ws/camera) ===== //
wssCam.on("connection", function (ws, req) {
  connectedClients++;
  var clientIP = req.socket.remoteAddress;
  
  console.log("\n=== ESP32 CAMERA CONNECTION (/ws/camera) ===");
  console.log("ğŸ“· Camera connected (" + connectedClients + " total)");
  console.log("   Remote address: " + clientIP);
  
  esp32CameraClient = ws;
  app.set("esp32CameraClient", ws);
  
  // Update camera status
  var esp32Status = app.get("esp32Status");
  esp32Status.connected = true;
  esp32Status.lastUpdate = new Date();
  app.set("esp32Status", esp32Status);
  
  // Handle messages from camera
  ws.on("message", function (data) {
    // Handle identification message
    if (!Buffer.isBuffer(data)) {
      try {
        var parsed = JSON.parse(data);
        if (parsed.type === "esp32_camera") {
          console.log("ğŸ“· Camera identified:", parsed.device || "Unknown");
          esp32Status.deviceInfo = parsed.device;
          app.set("esp32Status", esp32Status);
          
          // Notify web clients
          webClients.forEach(function (client) {
            if (client.readyState === 1) {
              client.send(JSON.stringify({
                type: "camera_connected",
                device: parsed.device,
              }));
            }
          });
        }
        return;
      } catch (e) {
        // Not JSON, ignore
      }
    }
    
    // Handle binary frame data
    if (Buffer.isBuffer(data) && data.length > 0) {
      // Save as latest frame
      app.set("latestFrame", data);
      
      // Update frame count
      var frameCount = (app.get("frameCount") || 0) + 1;
      app.set("frameCount", frameCount);
      
      // Increment FPS counter
      var incrementFrameCount = app.get("incrementFrameCount");
      if (incrementFrameCount) {
        incrementFrameCount();
      }
      
      // Update status
      esp32Status.connected = true;
      esp32Status.lastUpdate = new Date();
      esp32Status.frameCount = frameCount;
      app.set("esp32Status", esp32Status);
      
      // Broadcast to web clients
      var frameMessage = JSON.stringify({
        type: "frame",
        image: data.toString("base64"),
        timestamp: Date.now(),
      });
      
      webClients.forEach(function (client) {
        if (client.readyState === 1) {
          client.send(frameMessage);
        }
      });
    }
  });
  
  ws.on("close", function () {
    connectedClients--;
    console.log("ğŸ“· Camera disconnected");
    esp32CameraClient = null;
    app.set("esp32CameraClient", null);
    esp32Status.connected = false;
    app.set("esp32Status", esp32Status);
    
    // Notify web clients
    webClients.forEach(function (client) {
      if (client.readyState === 1) {
        client.send(JSON.stringify({ type: "camera_disconnected" }));
      }
    });
  });
  
  ws.on("error", function (error) {
    console.error("âš ï¸  Camera WebSocket error:", error);
  });
});

// ===== CAR WEBSOCKET HANDLER (/ws/car) ===== //
wssCar.on("connection", function (ws, req) {
  connectedClients++;
  var clientIP = req.socket.remoteAddress;
  
  console.log("\n=== ESP32 CAR CONNECTION (/ws/car) ===");
  console.log("ğŸš— Car connected (" + connectedClients + " total)");
  console.log("   Remote address: " + clientIP);
  
  esp32CarClient = ws;
  app.set("esp32CarClient", ws);
  
  // Update car status
  var carStatus = app.get("carStatus");
  carStatus.connected = true;
  carStatus.lastUpdate = new Date();
  app.set("carStatus", carStatus);
  
  // Handle messages from car
  ws.on("message", function (data) {
    try {
      var messageText = Buffer.isBuffer(data) ? data.toString("utf8") : data;
      var parsed = JSON.parse(messageText);
      
      console.log("ğŸ“¨ Car message:", parsed);
      
      // Handle identification
      if (parsed.type === "esp32_car") {
        console.log("ğŸš— Car identified:", parsed.device || "Unknown", "Status:", parsed.status || "Unknown");
        carStatus.status = parsed.status || "ready";
        carStatus.deviceInfo = parsed.device;
        app.set("carStatus", carStatus);
        
        // Notify web clients
        webClients.forEach(function (client) {
          if (client.readyState === 1) {
            client.send(JSON.stringify({
              type: "car_connected",
              device: parsed.device,
              status: parsed.status,
            }));
          }
        });
      }
      // Handle acknowledgments
      else if (parsed.type === "ack") {
        console.log("âœ… Car ACK:", parsed.command, "Status:", parsed.status);
        webClients.forEach(function (client) {
          if (client.readyState === 1) {
            client.send(JSON.stringify({
              type: "car_ack",
              command: parsed.command,
              status: parsed.status,
            }));
          }
        });
      }
    } catch (e) {
      console.log("âŒ Invalid message from car");
    }
  });
  
  ws.on("close", function () {
    connectedClients--;
    console.log("ğŸš— Car disconnected");
    esp32CarClient = null;
    app.set("esp32CarClient", null);
    carStatus.connected = false;
    carStatus.status = "disconnected";
    app.set("carStatus", carStatus);
    
    // Notify web clients
    webClients.forEach(function (client) {
      if (client.readyState === 1) {
        client.send(JSON.stringify({ type: "car_disconnected" }));
      }
    });
  });
  
  ws.on("error", function (error) {
    console.error("âš ï¸  Car WebSocket error:", error);
  });
});

/**
 * Listen on provided port, on all network interfaces.
 * Explicitly bind to 0.0.0.0 to accept connections from ESP32 and other devices
 */

server.listen(port, "0.0.0.0");
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log("\n=== SERVER STARTED ===");
  console.log("ğŸš€ Server running on port", addr.port);
  console.log("ğŸŒ HTTP: http://localhost:" + addr.port);
  console.log("ğŸŒ HTTP (network): http://" + getLocalIP() + ":" + addr.port);
  console.log("\nğŸ“¡ WebSocket Endpoints:");
  console.log("   ğŸ“· Camera:  ws://" + getLocalIP() + ":" + addr.port + "/ws/camera");
  console.log("   ğŸš— Car:     ws://" + getLocalIP() + ":" + addr.port + "/ws/car");
  console.log("   ğŸŒ Web:     ws://" + getLocalIP() + ":" + addr.port + "/ws");
}

/**
 * Get local IP address
 */
function getLocalIP() {
  var interfaces = require("os").networkInterfaces();
  for (var devName in interfaces) {
    var iface = interfaces[devName];
    for (var i = 0; i < iface.length; i++) {
      var alias = iface[i];
      if (
        alias.family === "IPv4" &&
        alias.address !== "127.0.0.1" &&
        !alias.internal
      ) {
        return alias.address;
      }
    }
  }
  return "0.0.0.0";
}
